<div class="" id="for"> 
	<center><h1>Recent Job Listings</h1></center>

</div>
<!-- <%= link_to 'New Jobs', new_job_path %> -->

 <% if @jobs.blank? %>
        <p style="font-size:75px; text-align:center; margin-top:150px" >There are no Job Postings Yet</p>
        <center><button style="font-size:30px; margin-top:50px"><a href="/jobs/new">Add New</a></button></center>
<% end %>





<%  a = @jobs.order("created_at DESC") %>
<% a.each do |p| %>



<div class="col-md-4 col-sm-4">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<strong>Company Name:</strong>  <%= p.company_name %>
		</div>

		<div class="panel-body">
			<%= image_tag(p.company_logo, :width => 90, :height => 80) %>
			<div class="container">
				<%= truncate(p.job_description, :length => 100, :separator => ' ') %>
			</div>
		</div>

		<div class="panel-footer">
			<%= link_to 'Show Details', job_path(p) %>|
			<%= link_to 'Edit your Posting', edit_job_path(p) %>|
			<%=  link_to 'Delete Posting', job_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>|
			<div class="btn btn-primary"><a href="#">APPLY</a></div>
		</div>
	</div>
</div>


<% end %>	
