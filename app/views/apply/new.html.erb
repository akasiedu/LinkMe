<div class="container">

<h1>Apply here</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3"> 

<div class="container">
    <% if @apply.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@apply.errors.count, "error") %> 
        prohibited Your Application from being Processed:</h2>
    <ul>
    <% @apply.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
</div>
  
  
  <%= form_for :apply do |f| %>
  <p>
    <%= f.label :firstname %>
    <%= f.text_field :firstname, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :lastname %>
    <%= f.text_field :lastname, class: 'form-control' %>
  </p>

  <p>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
   </p>
  
    <p>
      <%= f.label :phone_number %><br />
      <%= f.text_field :phone_number, class: 'form-control' %>
    </p>
  
    <p>
      <%= f.label :level_of_education %>
      <%= f.text_field :level_of_education, class: 'form-control' %>
    </p>

    <p>
      <%= f.label :specialty %>
      <%= f.text_field :specialty, class: 'form-control' %>
    </p>

    <p>
      <%= f.label :resume %>
      <%= f.file_field :resume, class: '' %>
    </p>

     <%= f.hidden_field :company_id %>

    <div class="action">
    <%= f.submit "Submit", class: "btn btn-primary", disable_with: "Submitting..."%>
  </div>
<% end %>
</div>
</div>
</div>